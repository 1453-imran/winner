//
import java.util.Scanner;

public class Giris {
    public static void main(String[] args) {

        Scanner say = new Scanner(System.in);
        int toplam=0, sayi;

        do {
            System.out.print("Sayı değeri giriniz : ");
            sayi = say.nextInt();
            if(sayi % 2 == 0 && sayi % 4 == 0){
                toplam += sayi;
            }
        }
        while (sayi % 2 == 0);
        System.out.print("Toplam : "+toplam);
    }
}
