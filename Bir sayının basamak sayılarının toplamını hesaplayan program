import java.util.Scanner;
public class Giris {


    public static void main(String[] args) {

        Scanner basamak = new Scanner(System.in);
        System.out.print("Sayiyi Gir: ");

        int rakam, adet=0, toplam=0;
                rakam = basamak.nextInt();

        while(rakam != 0)
        {
            toplam=(rakam%10)+toplam;
            rakam /= 10;
            ++adet;
        }

        System.out.println("Basamak Değeri Toplamı: " + toplam);

    }
}
